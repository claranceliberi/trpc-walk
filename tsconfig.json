{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "target": "es2017",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
        
        "types": [
            "node"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/"
    ]
}